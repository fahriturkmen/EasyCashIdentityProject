@model ConfirmMailViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <label>Kullanıcı Mail Adresi</label>
        <input type="text" class="form-control" value="@ViewBag.Mail" asp-for="Mail"/>
        <br />
        <label>Mail adresinize gelen 6 haneli kodu giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Hesapı Aktifleştir</button>
    </form>

</div>
